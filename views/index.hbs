<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Personal Website</title>
    <link rel="stylesheet" href="/public/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="sticky-top navbar navbar-expand-lg bg-body-tertiary shadow-sm">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img
            style="width: 50px"
            class="logo"
            src="/public/assets/logo.png"
            alt="Logo"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add Project</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-dark" type="button">Contact Me</button>
          </a>
        </div>
      </div>
    </nav>

    <!-- card -->
    <section class="container-fluid">
      <div class="card lembar shadow">
        <div class="content card-body">
          <h5 class="card-title">Hi Welcome to my Personal Website</h5>
          <p class="card-text">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
            eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim
            ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
            aliquip ex ea commodo consequat. Duis aute irure dolor in
            reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla
            pariatur. Excepteur sint occaecat cupidatat non proident, sunt in
            culpa qui officia deserunt mollit anim id est laborum.
          </p>
          <div style="display: flex; gap: 20px">
            <a href="/contact" class="btn btn-dark bulat">Contact</a>
            <a href="#" class="download-cv">
              Download CV
              <img src="/public/assets/download.svg" alt="download" />
            </a>
          </div>
          <div class="icons">
            <img
              class="socmed"
              src="/public/assets/linkedin.svg"
              alt="linkedin"
            />
            <img class="socmed" src="/public/assets/instagram.svg" alt="IG" />
            <img class="socmed" src="/public/assets/facebook.svg" alt="fb" />
            <img
              class="socmed"
              src="/public/assets/twitter.svg"
              alt="twitter"
            />
          </div>
        </div>

        <!-- Foto -->
        <div class="foto" style="margin: auto;">
          <div class="profile card text-center shadow-lg">
            <img
              src="/public/assets/febrian.jpg"
              class="card-img-top"
              alt="foto"
            />
            <div class="card-body name-title">
              <h5 class="card-title">Febrian Syahroni</h5>
              <h6>Fullstack Developer</h6>
            </div>
          </div>
        </div>
      </div>
    </section>

    {{! My Projects }}
    <section class="projects">
      <h1>My Projects</h1>
      <div class="container">
        {{#if projects}}
          {{#each projects}}
            <div class="card-container">
              <div class="card shadow-sm p-2" style="width: 18rem;">
                <img
                  src="/public/assets/bird.jpg"
                  class="card-img mb-2"
                  alt="bird"
                />
                <div class="">
                  <a
                    href="/project-details/{{id}}"
                    class="project-name"
                  >{{title}}</a>
                  <h6 class="date text-secondary">{{start}}
                    -
                    {{end}}</h6>
                  <p class="description card-text">
                    {{description}}
                  </p>
                  <div class="technologies">
                    {{#each checklist}}
                      <img src="{{this}}" alt="" />
                    {{/each}}
                  </div>
                  <div class="edit-delete">
                    <a
                      href="/edit-project/{{id}}"
                      target="_blank"
                      class="btn btn-dark"
                    >Edit</a>
                    <a
                      href="/delete-project/{{id}}"
                      class="btn btn-dark"
                    >Delete</a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        {{else}}
          <h6 style="text-align: center; grid-column: span 3">No Project
            Available</h6>
        {{/if}}
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>