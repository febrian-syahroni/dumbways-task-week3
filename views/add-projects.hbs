<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Projects</title>
    <link rel="stylesheet" href="/public/css/projects.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="sticky-top navbar navbar-expand-lg bg-body-tertiary shadow-sm">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img
            style="width: 50px"
            class="logo"
            src="/public/assets/logo.png"
            alt="Logo"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/add-project">Add Project</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-dark" type="button">Contact Me</button>
          </a>
        </div>
      </div>
    </nav>

    <!-- Form -->
    <section class="container">
      <h1>Add My Projects</h1>
      <form action="/add-project" method="post" id="projectForm">
        <div class="mb-3">
          <label for="projectName" class="form-label">Project Name
            <input
              name="title"
              type="text"
              class="form-control shadow"
              id="projectName"
              aria-describedby="emailHelp"
            />
          </label>
        </div>
        <div class="date mb-3">
          <label for="startDate" class="form-label">Start Date
            <input
              name="start"
              type="date"
              class="form-control shadow"
              id="startDate"
            />
          </label>
          <label for="endDate" class="form-label">End Date
            <input
              name="end"
              type="date"
              class="form-control shadow"
              id="endDate"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">
            Descriptions
            <textarea
              class="form-control shadow"
              name="description"
              id="description"
            ></textarea>
          </label>
        </div>
        <label class="form-label">Technologies
          <div class="checkbox text-secondary form-check mb-3">
            <label class="form-check-label" for="checklist">
              <input
                name="checklist"
                value="/public/assets/node-js.svg"
                type="checkbox"
                class="form-check-input shadow-sm"
                id="checklist"
              />
              Node JS
            </label>
            <label class="form-check-label" for="checklist">
              <input
                name="checklist"
                value="/public/assets/next-js.svg"
                type="checkbox"
                class="form-check-input shadow-sm"
                id="checklist"
              />
              Next JS
            </label>
            <label class="form-check-label" for="checklist">
              <input
                name="checklist"
                value="/public/assets/react-js.svg"
                type="checkbox"
                class="form-check-input shadow-sm"
                id="checklist"
              />
              React JS
            </label>
            <label class="form-check-label" for="checklist">
              <input
                name="checklist"
                value="/public/assets/typescript.svg"
                type="checkbox"
                class="form-check-input shadow-sm"
                id="checklist"
              />
              TypeScript
            </label>
          </div>
        </label>
        <div class="mb-3">
          <label for="formFile" class="form-label">Upload Image
            <input class="form-control shadow" type="file" id="formFile" />
          </label>
        </div>
        <div class="submit">
          <button type="submit" class="btn btn-dark px-4 rounded-pill shadow">
            Submit
          </button>
        </div>
      </form>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>